{
  "name": "arduboy-pixel",
  "displayName": "arduboy pixel art editor",
  "description": "A pixel art editor for Arduboy devices",
  "version": "0.0.1",
  "author": "github.com/devchew",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "repository": "https://github.com/devchew/arducode",
  "license": "MIT",
  "icon": "ardens.png",
  "activationEvents": [],
  "publisher": "devchew",
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "arduboyPixel.openSpriteEditor",
        "title": "Open Sprite Editor",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "arduboyPixel.openSpriteEditor",
          "when": "resourceExtname == '.h' && resourceFilename =~ /\\.sprite\\.h$/",
          "group": "navigation"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "arduboyPixel.spriteEditor",
        "displayName": "Arduboy Pixel Art Editor",
        "priority": "option",
        "selector": [
          {
            "filenamePattern": "*.sprite.h"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile",
    "check-types": "tsc --noEmit",
    "package:vsix": "vsce package"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"
}
